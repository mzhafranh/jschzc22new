<!DOCTYPE html>
<html>

<head>
    <title>BREAD (Browse, Read, Edit, Add, Delete)</title>
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>

<body>
    <div class="container mt-3">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Todo List</h2>
            </div>
            <div class="card-body" style="padding-left: 0; padding-right: 0; padding-bottom: 0;">
                <form action="" id="searchForm" method="get" style="padding: 16px 16px 0px 16px;">
                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="name" class="col-form-label">Title</label>
                        </div>
                        <div class="col-10">
                            <input type="text" name="title" class="form-control" placeholder="insert your title">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="deadline">Deadline</label>
                        </div>
                        <div class="col-4">
                            <input type="date" class="form-control" name="startDate">
                        </div>
                        <div class="col-2">
                            <p class="text-center"> s.d. </p>
                        </div>
                        <div class="col-4">
                            <input type="date" class="form-control" name="endDate">
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-2">
                            <label for="complete">Complete</label>
                        </div>
                        <div class="col-10">
                            <select id="complete" name="complete" class="form-control">
                                <option value="">--select complete--</option>
                                <option value=0>Not Yet
                                </option>
                                <option value=1>Yes
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="row ml-0 mb-3">
                        <div class="col-2">
                            <button class="btn btn-success"><i class="fa-solid fa-sort"></i> sort by deadline</button>
                        </div>
                        <div class="col-10">
                            <a href="/todos" class="btn btn-warning btn-sm"><i
                                    class="fa-solid fa-arrows-rotate"></i></a>
                            <button type="submit" class="btn btn-info btn-sm"><i
                                    class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </div>
            </div>
            </form>
            <div class="card-header" style="border-bottom: none;">
                <div class="row ml-0">
                    <div class="col">
                        <input type="text" name="add-todo-title" id="add-todo-title" class="form-control" placeholder="title">
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-primary" onclick="addTodo()"><i class="fa-solid fa-arrow-down"></i></button>
                    </div>
                </div>
            </div>

            <div id="todos-list">

            </div>

        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div class="col">
                    <nav aria-label="Page navigation" class="d-flex justify-content-end">
                        <ul class="pagination mb-0">
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    </div>
    <br>

    <!-- Confirmation Modal -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalLabel">Delete Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="modal-paragraph">Apakah kamu yakin akang menghapus data NAMA?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal"
                        style="width: 90px;">No</button>
                    <button type="button" class="btn btn-warning btn-sm" id="confirmButton"
                        style="width: 90px;">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/jquery-3.6.0.min.js"></script>

    <script>
        // Function to show the modal
        function showConfirmationModal(name, id) {
            // Show the modal
            var confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'), {
                backdrop: 'static', // Prevent closing the modal by clicking outside
                keyboard: false     // Prevent closing the modal by pressing Esc
            });

            const paragraph = document.getElementById('modal-paragraph');
            paragraph.textContent = `Apakah kamu yakin akang menghapus data ${name}?`

            // Show the modal
            confirmationModal.show();


            // Set up the confirm button click event
            document.getElementById('confirmButton').addEventListener('click', function () {
                window.location.href = `/todos/delete/${id}`// Call the callback function on confirmation
                confirmationModal.hide(); // Hide the modal
            });
        }

    </script>

    <script>
        const currentURL = window.location.href
        const executorId = currentURL.split("/")[4]
        var params = {
            page: 1,
            limit: 10,
            title: '""',
            complete: '',
            startdateDeadline: '""',
            enddateDeadline: '""',
            sortBy: '"_id"',
            sortMode: '"asc"',
            executor: executorId
        }
        // var idObj = $('#idObj').val()

        const readData = () => {
            $.ajax({
                method: "GET",
                url: "http://localhost:3000/todos",
                dataType: "json",
                data: params
            }).done(function (response) {
                params = { ...params, totalPages: response.totalPages }
                let todosList = ''

                response.data.forEach((item, index) => {

                    const now = new Date();
                    const date = new Date(item.deadline);
                    const day = String(date.getDate()).padStart(2, '0');
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const year = date.getFullYear();
                    const hours = String(date.getHours()).padStart(2, '0');
                    const minutes = String(date.getMinutes()).padStart(2, '0');
                    const formattedDate = `${day}-${month}-${year} ${hours}:${minutes}`;
                    const passedDeadline = date < now && !item.complete;

                    if (passedDeadline) {
                        todosList += `
                        <div class="card mt-3 d-flex justify-content-center bg-danger-subtle text-danger-emphasis"
                            style="height: 50px; padding: 0 8px 0 16px;">
                            <div class="row">
                                <div class="col-11 d-flex align-items-center">
                                    <span>${formattedDate} ${item.title}</span>
                                </div>
                                <div class="col-1">
                                    <button class="btn btn-sm" onclick="openEditModal()"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-sm" onclick="openDeleteModal()"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </div>
                        </div>
                    `
                    } else if (item.complete) {
                        todosList += `
                        <div class="card mt-3 d-flex justify-content-center bg-success-subtle text-success-emphasis"
                            style="height: 50px; padding: 0 8px 0 16px;">
                            <div class="row">
                                <div class="col-11 d-flex align-items-center">
                                    <span>${formattedDate} ${item.title}</span>
                                </div>
                                <div class="col-1">
                                    <button class="btn btn-sm" onclick="openEditModal()"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-sm" onclick="openDeleteModal()"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </div>
                        </div>
                    `
                    } else {
                        todosList += `
                        <div class="card mt-3 d-flex justify-content-center bg-body-secondary text-secondary-emphasis"
                            style="height: 50px; padding: 0 8px 0 16px;">
                            <div class="row">
                                <div class="col-11 d-flex align-items-center">
                                    <span>${formattedDate} ${item.title}</span>
                                </div>
                                <div class="col-1">
                                    <button class="btn btn-sm" onclick="openEditModal()"><i class="fa-solid fa-pen"></i></button>
                                    <button class="btn btn-sm" onclick="openDeleteModal()"><i class="fa-solid fa-trash"></i></button>
                                </div>
                            </div>
                        </div>
                    `
                    }
                });
                $('#todos-list').html(todosList)
            }).fail(function (err) {
                alert('gagal pake jquery')
            })
        }

        const addTodo = () => {
            
            let addTodoParams = {
                title: $('#add-todo-title').val(),
                executor: executorId
            }
            $.ajax({
                method: "POST",
                url: "http://localhost:3000/todos",
                dataType: "json",
                data: addTodoParams
            }).done(function (response) {
                readData()
            })
        }

        const openEditModal = () => {
            console.log("open edit modal")
        }

        const openDeleteModal = () => {
            console.log("open delete modal")
        }

        $(document).ready(function () {
            readData()
        })   
    </script>

</body>

</html>